<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_nav_graph"
    app:startDestination="@id/premiereFragment">

    <fragment
        android:id="@+id/premiereFragment"
        android:name="com.fara.nearbymovies.ui.fragment.PremiereFragment"
        android:label="PremiereFragment">
        <action
            android:id="@+id/action_premiereFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.fara.nearbymovies.ui.fragment.DetailFragment"
        android:label="DetailFragment" />
</navigation>